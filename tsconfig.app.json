{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    /* --- Vue 3 / Vite defaults --- */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,

    /* --- Types --- */
    "types": ["vite/client"],

    /* --- Path Aliases --- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* --- Output --- */
    "noEmit": true,
    "incremental": false,
    "composite": false
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "env.d.ts"]
}
