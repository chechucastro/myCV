{
  "name": "my-cv",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "npm install @rollup/rollup-linux-x64-gnu --save-optional || true",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "lighthouse:ci": "lhci autorun",
    "lighthouse:ci:full": "npm run build && (npm run preview &) && sleep 5 && npm run lighthouse:ci && pkill -f 'vite preview' || true",
    "type-check": "vue-tsc --build && rm -f ./*.tsbuildinfo || true",
    "lint": "eslint . --fix",
    "test:all": "npm run type-check && npm run lint && npm run format && npm run test:unit && npm run test:e2e && npm run lighthouse:ci:full",
    "format": "prettier --write src/",
    "prepare": "husky"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@tailwindcss/vite": "^4.1.17",
    "axios": "^1.13.2",
    "element-plus": "^2.11.7",
    "pinia": "^3.0.4",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.1.1",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.24",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.4.2",
    "@vitest/ui": "^3.2.4",
    "@vue/compiler-sfc": "^3.5.24",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.1",
    "eslint-plugin-playwright": "^2.3.0",
    "eslint-plugin-vue": "~10.5.1",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "jsdom": "^27.1.0",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.3"
  }
}
